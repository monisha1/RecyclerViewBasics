<?xml version="1.0" encoding="utf-8"?>




<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:elevation="20dp"
    android:paddingBottom="5dp"
    android:background="#934953"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="60dp"
       >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgthumb"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_weight=".7"
        android:layout_x="10dp"
        android:layout_y="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtmaintext"
        android:layout_weight="1.5"
        android:layout_x="89dp"
        android:layout_y="16dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgthumb"
        android:layout_toEndOf="@+id/imgthumb"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtsubtext"
        android:gravity="right"
        android:layout_x="260dp"
        android:layout_y="15dp"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/txtmaintext" />

        </RelativeLayout>



</android.support.v7.widget.CardView>
